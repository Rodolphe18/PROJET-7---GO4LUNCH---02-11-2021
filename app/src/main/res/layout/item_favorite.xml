<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_favorite_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="center_vertical"
    >
    <ImageView
        android:id="@+id/item_favorite_icon"
        android:src="@drawable/ic_place_icon_type"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/item_favorite_name_place"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:text="Name my favorite place"/>
    <ImageButton
        android:id="@+id/item_favorite_button_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/fui_transparent"
        android:src="@drawable/ic_baseline_star_24"/>

</LinearLayout>