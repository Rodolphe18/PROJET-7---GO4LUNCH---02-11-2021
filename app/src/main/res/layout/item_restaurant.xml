<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_restaurant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/item_restaurant_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_place_icon_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/item_restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example restaurant"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/item_restaurant_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type restaurant - address"
            app:layout_constraintTop_toBottomOf="@id/item_restaurant_name"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/item_restaurant_open_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open until 7pm"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/item_restaurant_information"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/item_restaurant_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120m"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/item_restaurant_icon"
            />

        <TextView
            android:id="@+id/item_restaurant_nb_workmate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(2)"
            android:layout_marginEnd="8dp"
            android:drawableStart="@drawable/ic_baseline_person_outline_24"
            app:layout_constraintTop_toBottomOf="@id/item_restaurant_distance"
            app:layout_constraintEnd_toStartOf="@id/item_restaurant_icon"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
